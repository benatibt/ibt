{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "title": "Islands Book Trust",
    "description": "Simple bespoke theme for Islands Book Trust",
    "settings": {
        "color": {
            "palette": [
                { "slug": "background", "name": "Background", "color": "#ffffff" },
                { "slug": "text", "name": "Text", "color": "#000000" },
                { "slug": "alt-background", "name": "Alternate Background", "color": "#F2F2FA" },
                { "slug": "primary", "name": "Primary (Buttons & Links)", "color": "#000080" },
                { "slug": "hover", "name": "Hover", "color": "#000000" }
            ]
        },
        "layout": {
            "contentSize": "50rem",
            "wideSize": "80rem"
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [ "px", "em", "rem", "%" ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
            "customFontSize": true,
            "defaultFontSizes": false,
            "dropCap": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "fontFamilies": [
                {
                    "name": "Body Font",
                    "slug": "body-font",
                    "fontFamily": "\"Source Serif 4\", Georgia, Cambria, \"Times New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "\"Source Serif 4\"",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [ "file:./assets/fonts/source-serif-4/source-serif-4-regular.woff2" ]
                        },
                        {
                            "fontFamily": "\"Source Serif 4\"",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": [ "file:./assets/fonts/source-serif-4/source-serif-4-bold.woff2" ]
                        },
                        {
                            "fontFamily": "\"Source Serif 4\"",
                            "fontWeight": "400",
                            "fontStyle": "italic",
                            "src": [ "file:./assets/fonts/source-serif-4/source-serif-4-italic.woff2" ]
                        }
                    ]
                },
                {
                    "name": "Title Font",
                    "slug": "title-font",
                    "fontFamily": "\"Source Sans 3\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Ubuntu, \"Helvetica Neue\", Arial, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "\"Source Sans 3\"",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": [ "file:./assets/fonts/source-sans-3/source-sans-3-bold.woff2" ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                { "name": "S",   "slug": "s",   "size": "1rem" },
                { "name": "M",   "slug": "m",   "size": "1.2rem" },
                {
                    "name": "L",
                    "slug": "l",
                    "size": "2rem",
                    "fluid": { "min": "1.44rem", "max": "2rem" }
                },
                {
                    "name": "XL",
                    "slug": "xl",
                    "size": "2.5rem",
                    "fluid": { "min": "1.73rem", "max": "2.5rem" }
                },
                {
                    "name": "XXL",
                    "slug": "xxl",
                    "size": "3.75rem",
                    "fluid": { "min": "2.25rem", "max": "3.75rem" }
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontStyle": "normal",
            "fontWeight": "400",
            "fontFamily": "var(--wp--preset--font-family--body-font)",
            "fontSize": "var(--wp--preset--font-size--m)"
        },
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--title-font)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                },
                "spacing": {
                    "padding": { "top": "1.5rem", "bottom": "0.75rem" }
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "textDecoration": "none"
                }
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--title-font)",
                    "fontWeight": "800",
                    "fontStyle": "normal"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "#ffffff"
                },
                "border": {
                    "color": "var(--wp--preset--color--primary)",
                    "width": "3px",
                    "style": "solid",
                    "radius": "0.6rem"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "2rem",
                        "right": "2rem"
                    }
                }
            },
            "h1": { "typography": { "fontSize": "var(--wp--preset--font-size--xl)" } },
            "h2": { "typography": { "fontSize": "var(--wp--preset--font-size--l)" } },
            "h3": { "typography": { "fontSize": "var(--wp--preset--font-size--m)" } },
            "h4": { "typography": { "fontSize": "var(--wp--preset--font-size--m)" } },
            "h5": { "typography": { "fontSize": "var(--wp--preset--font-size--m)" } },
            "h6": { "typography": { "fontSize": "var(--wp--preset--font-size--m)" } }
        },
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body-font)",
                    "fontSize": "var(--wp--preset--font-size--m)"
                },
                "color": { "text": "var(--wp--preset--color--text)" }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--title-font)",
                    "fontWeight": "700"
                },
                "elements": {
                    "link": {
                        "color": { "text": "var(--wp--preset--color--primary)" }
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--title-font)",
                    "fontWeight": "700"
                },
                "spacing": {
                    "blockGap": "1rem"
                }
            },
            "core/button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--title-font)",
                    "fontWeight": "800",
                    "fontStyle": "normal"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "#ffffff"
                },
                "border": {
                    "color": "var(--wp--preset--color--primary)",
                    "width": "3px",
                    "style": "solid",
                    "radius": "0.6rem"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "2rem",
                        "right": "2rem"
                    }
                },
                "variations": {
                    "outline": {
                        "color": {
                            "background": "transparent",
                            "text": "var(--wp--preset--color--primary)"
                        },
                        "border": {
                            "color": "var(--wp--preset--color--primary)",
                            "width": "3px",
                            "style": "solid",
                            "radius": "0.6rem"
                        },
                        "spacing": {
                            "padding": {
                                "top": "1rem",
                                "bottom": "1rem",
                                "left": "2rem",
                                "right": "2rem"
                            }
                        },
                        "typography": {
                            "fontFamily": "var(--wp--preset--font-family--title-font)",
                            "fontWeight": "800",
                            "fontStyle": "normal"
                        }
                    }
                }
            },
            "woocommerce/customer-account": {
                "color": { "text": "var(--wp--preset--color--primary)" }
            },
            "woocommerce/mini-cart": {
                "color": { "text": "var(--wp--preset--color--primary)" }
            }
        }
    }
}
